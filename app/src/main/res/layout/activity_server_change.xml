<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="io.github.wapmorgan.onecloudmanager.ServerChangeActivity">

    <TextView android:text="@string/server_cpu" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpu_seekbar"
        android:max="8"
        android:minWidth="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpu_value"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView android:text="@string/server_ram" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ram_seekbar"
        android:max="16384"
        android:minWidth="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ram_value"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView android:text="@string/server_hdd" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hdd_seekbar"
        android:max="250"
        android:minWidth="240dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hdd_value"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_hdd_type"
        android:id="@+id/hdd_type_switch"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textOn="@string/hdd_type_sas"
        android:textOff="@string/hdd_type_ssd"
        android:showText="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_performance"
        android:id="@+id/performance_switch"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textOn="@string/server_performance_normal"
        android:textOff="@string/server_performance_high"
        android:showText="true"/>




</LinearLayout>
